<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/detailed_image_start_margin"
        android:layout_marginTop="@dimen/detailed_image_top_margin"
        android:layout_marginEnd="@dimen/detailed_image_end_margin"
        android:layout_marginBottom="@dimen/detailed_image_bottom_margin"
        android:layout_weight="0.5"
        android:contentDescription="@string/detailed_img_description"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/icon_image_foreground" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/detailed_text_start_margin"
        android:layout_marginEnd="@dimen/detailed_text_end_margin"
        android:layout_weight="0.5"
        android:text="@string/note_text" />

</androidx.appcompat.widget.LinearLayoutCompat>